<body class="bg-dark text-light">
    <h1 class="text-center my-5">user resgister form</h1>

    <div class="container p-4 bg-black" style="width: 680px; border: 2px solid blue bg-black text-light; border-radius: 10px;">
        <form action="/register" method="post">
          <div class="mb-3">
            <label  class="form-label">Name</label>
            <input type="text" name="name" class="form-control bg-black text-light required" >
          
          </div>
            <div class="mb-3">
              <label  class="form-label">E-mail address</label>
              <input type="email" name="email" class="form-control bg-black text-light required" >
            
            </div>
            <div class="mb-3">
              <label  class="form-label">Password</label>
              <input type="password" name="password" class="form-control bg-black text-light required">
            </div>
            <div class="mb-3">
                <label  class="form-label">profile</label>
                <input type="file" name="file" class="form-control bg-black text-light required">
              </div>
              <div class="d-grid col-6 mx-auto mt-5">
            <button type="submit" class="btn btn-primary">register</button>
        </div>
          </form>
    </div>
    
</body>
